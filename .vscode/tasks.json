{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "catkin_make: build",
            "type": "shell",
            "problemMatcher": [],
            "command": "catkin_make --directory ${workspaceFolder}/catkin_ws",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start roscore",
            "type": "shell",
            "problemMatcher": [],
            "command": "roscore"
        },
        {
            "label": "Launch simulator",
            "type": "shell",
            "problemMatcher": [],
            "command": [
                "source ${workspaceFolder}/catkin_ws/devel/setup.bash",
                "&&",
                "roslaunch puzzlebot_world puzzlebot_simple_world.launch"
            ]
        },
        {
            "label": "Launch caibot-brain",
            "type": "shell",
            "problemMatcher": [],
            "command": [
                "source ${workspaceFolder}/catkin_ws/devel/setup.bash",
                "&&",
                "rosrun caibot_brain main_node"
            ]
        }
    ]
}